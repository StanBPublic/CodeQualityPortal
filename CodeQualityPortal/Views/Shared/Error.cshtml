@using System.Collections
@model System.Web.Mvc.HandleErrorInfo

<h2 class="text-danger">An error occurred while processing your request</h2>

<h3>More Info</h3>
<table class="table table-striped table-condensed">
    <tr>
        <td>@Html.LabelFor(m => m.ControllerName)</td>
        <td>@Html.DisplayTextFor(m => m.ControllerName)</td>
    </tr>
    <tr>
        <td>@Html.LabelFor(m => m.ActionName)</td>
        <td>@Html.DisplayTextFor(m => m.ActionName)</td>
    </tr>
    <tr>
        <td>@Html.LabelFor(m => m.Exception.Message)</td>
        <td>@Html.DisplayTextFor(m => m.Exception.Message)</td>
    </tr>

    <tr>
        <td>@Html.LabelFor(m => m.Exception.Source)</td>
        <td>@Html.DisplayTextFor(m => m.Exception.Source)</td>
    </tr>

    <tr>
        <td>@Html.LabelFor(m => m.Exception.StackTrace)</td>
        <td>@Html.DisplayTextFor(m => m.Exception.StackTrace)</td>
    </tr>

    @if (Model != null && Model.Exception.Data.Count > 0)
    {
        <tr><td colspan="2" class="text-warning">Additional exception data</td></tr>
        foreach (DictionaryEntry item in Model.Exception.Data)
        {
            <tr>
                <td>@item.Key</td>
                <td>@item.Value</td>
            </tr>
        }
    }
</table>