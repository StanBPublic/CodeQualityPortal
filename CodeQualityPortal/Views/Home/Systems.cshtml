@model string

<style>
    div.series > span {
        margin-left: 5px;
        margin-right: 50px;
        font-weight: bold;
    }
</style>

@section JavascriptInHead
{
    @Scripts.Render("~/js/app/systems/systems-controller.js")
    @Scripts.Render("~/js/app/systems/systems-service.js")
    <script type="text/javascript">
        systemsModule.factory("bootstrappedData", function() {
            return {
                systemOptions: @Html.Raw(Model)
            };
        });
    </script>
}

<div style="margin-top:20px;" ng-app="systemsModule" ng-controller="SystemsController">
    <h3>Systems Stats</h3>
    <div ng-include="'/js/app/systems/partials/grid.html'" ng-init="init()"></div>
    
    <p></p>
    <h4>{{label}}</h4>
    <div ng-include="'/js/app/systems/partials/chart.html'"></div>
</div>
